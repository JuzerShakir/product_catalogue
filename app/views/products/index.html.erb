<%= form_with(url: search_user_products_path(current_user), method: :post) do |form|  %>
    <div class="input-group mb-5">
        <%= form.search_field :query, class: "form-control", placeholder: "Search Products", oninput: "this.form.requestSubmit()" %>
    </div>
<% end %>

<%= render "products_search", products: @products %>